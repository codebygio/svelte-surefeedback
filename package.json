{
	"name": "svelte-surefeedback",
	"version": "0.0.1",
	"description": "A lightweight Svelte wrapper component for SureFeedback/ProjectHuddle integration",
	"author": "Giovani Rodriguez <contact@codebygio.com>",
	"license": "MIT",
	"keywords": [
		"svelte",
		"surefeedback",
		"projecthuddle",
		"feedback",
		"widget",
		"comments",
		"annotation",
		"svelte-component"
	],
	"repository": {
		"type": "git",
		"url": "git+https://github.com/codebygio/svelte-surefeedback.git"
	},
	"bugs": {
		"url": "https://github.com/codebygio/svelte-surefeedback/issues"
	},
	"homepage": "https://codebygio.com/libs/svelte-surefeedback",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build && npm run package",
		"preview": "vite preview",
		"package": "svelte-kit sync && svelte-package && publint",
		"prepublishOnly": "npm run package",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check ."
	},
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"sideEffects": [
		"**/*.css"
	],
	"svelte": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"type": "module",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js"
		}
	},
	"peerDependencies": {
		"svelte": "^5.0.0"
	},
	"devDependencies": {
		"@sveltejs/adapter-auto": "^3.0.0",
		"@sveltejs/kit": "^2.0.0",
		"@sveltejs/package": "^2.0.0",
		"@sveltejs/vite-plugin-svelte": "^4.0.0",
		"prettier": "^3.3.2",
		"prettier-plugin-svelte": "^3.2.6",
		"publint": "^0.2.0",
		"svelte": "^5.0.0",
		"svelte-check": "^4.0.0",
		"typescript": "^5.0.0",
		"vite": "^5.4.11"
	}
}